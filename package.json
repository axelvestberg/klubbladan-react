{
  "name": "reactnodejs",
  "description": "Boiler plate for react + nodejs apps",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "10.15.3"
  },
  "scripts": {
    "client-install": "cd client && npm install",
    "server-install": "cd server && npm install",
    "setup": "concurrently \"npm run server-install\" \"npm run client-install\"",
    "dev": "concurrently \"cd server && npm run server\" \"cd client && npm run client\"",
    "heroku-postbuild": "npm run build",
    "precommit": "pretty-quick --staged",
    "build": "concurrently \"cd client && npm install && npm run build\" \"cd server && npm install && npm run build\"",
    "start:prod": "cd server && npm run start:prod"
  },
  "dependencies": {
    "concurrently": "^3.5.1"
  },
  "devDependencies": {
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0"
  }
}